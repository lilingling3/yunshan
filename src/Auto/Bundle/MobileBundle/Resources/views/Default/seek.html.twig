{% extends "AutoMobileBundle::base.html.twig" %}
{% set page_id  = ['default', 'seek'] %}
{% block stylesheets %}


    <script type="text/javascript" src="https://webapi.amap.com/maps?v=1.3&key=3dc0d24d401640b9b8249da6c4dd5a72&plugin=AMap.Walking,AMap.Autocomplete,AMap.service,AMap.PlaceSearch"></script>
    <script type="text/javascript" src="https://cache.amap.com/lbs/static/WalkingRender.js"></script>
    <script type="text/javascript" src="https://cache.amap.com/lbs/static/addToolbar.js"></script>
    {{ parent() }}
    <style>
        .amap-sug-result { height: 0px; display: none; border: none; background-color: transparent; }
        .amap-sug-result .auto-item { display: none; height: 0px; }
    </style>
{% endblock %}
{% block content %}
   <div class="container">
       
       <div class="site-cont">
           <div class="title">当前位置</div>
           <div class="inner">
               <div class="row row1 nowaddress "  lng="{{ lng }}" lat="{{ lat }}"><p class="sitename">{{ address }}</p><span class="location"></span>
               </div>
           </div>
       </div>

       <div class="site-cont">
           <div class="title">搜索附近</div>


        <div class="top-seek">
           <div class="seek-cont">
               <img  src="{{ asset('/bundles/automobile/images/seek-input.png') }}" />
               <input type="text" name="address"  class="input-t address tb-center" id="address" value=""/>
           </div>
       </div>

           <div class="inner resluts">

           </div>
       </div>
   </div>
    <div class="geomap">
        <div id='seekcontainer'></div>
        <div id="panel"></div>
    </div>

    <form class="lnglat"  action="{{ path("auto_mobile_station_list") }}" method="POST">
        <input type="hidden" name="address" id="inputaddress" value=""/>
        <input type="hidden" id="lng" name="lng" value=""/>
        <input type="hidden" id="lat" name="lat" value=""/>
    </form>
{% endblock %}
{% block footer %}
{% endblock %}
