{{ form_start(form) }}
<div class="ui form">

    <div class=" field">
        <label>三者车车牌号</label>
        {{ form_widget(form.thirdPartyLicensePlate,{'attr': {'placeholder':'请输入三者车车牌号','class':'ui dropdown'}} ) }}
    </div>
    <div class=" field">
        <label>父级车</label>
        {{ form_widget(form.parent,{'attr': {'placeholder':'请输入三者车车牌号','class':'ui dropdown'}} ) }}
    </div>


    {#<div class=" field">#}
        {#<label>{{ form_label(form.maintenanceRecord.rentalCar) }}</label>#}
        {#{{ form_widget(form.maintenanceRecord.rentalCar,{'attr': {'placeholder':'租赁车辆','class':'ui dropdown'}} ) }}#}
    {#</div>#}

    <div class=" fields" >
        <div class="four wide field">
            <label>{{ form_label(form.maintenanceRecord.kind) }}</label>
            {{ form_widget(form.maintenanceRecord.kind,{'attr': {'placeholder':'保险类型','class':'ui dropdown'}} ) }}
        </div>
        <div class="twelve wide  field" >
            <label>{{ form_label(form.maintenanceRecord.maintenanceReason) }}</label>
            {{ form_widget(form.maintenanceRecord.maintenanceReason,{'attr': {'placeholder':'请输入事故原因' }} ) }}
        </div>
    </div>

    <div class="field">
        <label>{{ form_label(form.maintenanceRecord.downTime) }}</label>
        {{ form_widget(form.maintenanceRecord.downTime ) }}
    </div>
    <div class="field">
        <label>{{ form_label(form.maintenanceRecord.maintenanceAmount) }}(元)</label>
        {{ form_widget(form.maintenanceRecord.maintenanceAmount,{'attr': {'placeholder':'请输入定损金额' }} ) }}
    </div>


    <div class="field">
        <label>{{ form_label(form.maintenanceRecord.maintenanceTime) }}</label>
        {{ form_widget(form.maintenanceRecord.maintenanceTime) }}
    </div>
    <div class="field">
        <label>{{ form_label(form.maintenanceRecord.maintenanceProject) }}</label>
        {{ form_widget(form.maintenanceRecord.maintenanceProject,{'attr': {'placeholder':'请填写维修项目' }}) }}
    </div>

    <div class=" fields" >
        <div class="eight wide field">
            <label>{{ form_label(form.maintenanceRecord.company) }}</label>
            {{ form_widget(form.maintenanceRecord.company,{'attr': {'placeholder':'请输入修理厂名称' }}) }}
        </div>
        <div class="eight wide  field" >
            <label>修理状态</label>
            {{ form_widget(form.maintenanceRecord.status,{'attr': {'placeholder':'保险类型','class':'ui dropdown'}} ) }}
        </div>
    </div>


    <div class="photographs">
        {% set name = form.maintenanceRecord.images.vars.prototype.vars.full_name|replace({'__name__': ''}) %}
        {% for p in form.maintenanceRecord.images %}
            <div class="field photograph">
                <img src="{{ p.vars.value starts with 'http://' ? p.vars.value : p.vars.value|photograph }}">
                {{ form_widget(p, {full_name: name}) }}
                <button type="button" class="close" data-dismiss="photograph">&times;</button>
            </div>
        {% endfor %}
        <button class="ui basic button add-file watermark"><i class="icon photo"></i> 上传图片 </button>
        <script type="text/x-handlebars-template" class="template">
            <div class="field photograph">
                <img src="{{ '{{ path }}' }}">
                {{ form_widget(form.maintenanceRecord.images.vars.prototype, {full_name: name, value: '{{ localname }}'}) }}

                <button type="button" class="close" data-dismiss="photograph">&times;</button>
            </div>
        </script>

    </div>
    {% do form.maintenanceRecord.images.setRendered %}


    <button  class="ui teal button " onclick="JavaScript:history.back(-1);">返回</button>
    <button class="ui teal button" type="submit">提交</button>
</div>
{{ form_end(form) }}
