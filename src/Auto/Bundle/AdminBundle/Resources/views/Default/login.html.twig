{% extends "AutoAdminBundle::base.html.twig" %}
{% set page_id  = ['default', 'login'] %}
 {% block content %}

     <form action="{{ path('auto_admin_login_verify') }}" id="codeloginVerify" method="post">
         <div class="login-form">
             <li>
                 <div class="in-cont">
                     <input type="text" class="text" id="mobile" maxlength="11" name="mobile"  required  placeholder="请输入手机号">
                 </div>
             </li>
             <li>
                 <div class="in-cont">
                     <input type="text" class="text" id="code" name="code" required placeholder="请输入短信验证码">
                 </div>
                 <button type="button" class="code">获取验证码</button>
             </li>
             <div class="login-error" >  手机号或密码错误</div>
         </div>

         <div class="submit-button">
             <div class="row">
                 <button type="button" class="login-in">登录</button>
             </div>



         </div>
     </form>




 {% endblock %}