{% extends "AutoWapBundle::base.html.twig" %}
{% set page_id  = ['activity', 'codelogin'] %}
{% block stylesheets %}
    {{ parent() }}
    <script src="https://s4.cnzz.com/z_stat.php?id=1259593410&web_id=1259593410" language="JavaScript"></script>
    <style>
        body a:first-child { display: none; }

    </style>
{% endblock %}
{% block content %}

    <form action="{{ path('auto_wap_activity_codelogin_verify') }}" id="codelogin2Verify" method="post">
        <div class="login-form">
            <li>
                <div class="in-cont">
                    <input type="text" class="text" id="mobile" maxlength="11" name="mobile"  required  placeholder="请输入手机号">
                </div>
            </li>
            <li>
                <div class="in-cont">
                    <input type="text" class="text" id="code" name="code" required placeholder="请输入短信验证码">
                </div>
                <button type="button" class="code">获取验证码</button>
            </li>
            <div class="login-error" >  手机号或密码错误</div>
        </div>

        <div class="submit-button">
            <div class="row">
                <button type="button" class="login-in">登录</button>
            </div>
            <div class="row ph">
                <div class="protocol">
                    同意<a class="href" href="{{ path('auto_wap_more_rent') }}">《云杉智行租赁用户协议》</a>
                </div>
            </div>

        </div>
    </form>
    <input type="hidden" name="source" id="source" value="{{ source }}" />
{% endblock %}