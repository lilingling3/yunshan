{% extends "AutoWapBundle::base.html.twig" %}
{% import "AutoManagerBundle:Order:_status.html.twig" as status %}

{% set page_id  = ['order2', 'list'] %}
{% block content %}

    <div class="orderlist" pageCount="{{ pageCount }}" user="{{ app.user.token }}">
    {% for rentalOrder in rentalOrders %}

        <a href="{{ path('auto_wap_rental_order_show2',{'id':rentalOrder.orderID}) }}">

            <div class="order-li status{{ rentalOrder.status }}">
                <div class="row border-bottom">
                    <p class="b">
                        {{ rentalOrder.createTime }}
                            <span class="status-top1">查看</span>
                    </p>
                </div>
                <div class="row">
                        <div class="column column-info">
                            <div class="item">
                                <p>车牌</p>
                                {{ rentalOrder.rentalCar.license }}
                            </div>

                            <div class="item">
                                <p>型号</p>
                                {{ rentalOrder.rentalCar.car.name }}
                            </div>
                            <div class="item">
                                <p>状态</p>
                                {% if rentalOrder.status!=199 %}
                                    <span class=" status-top{{ rentalOrder.status }}">{{ status.name(rentalOrder) }}</span>
                                {% else %}
                                    <span class="status-top1">已完成</span>
                                {% endif %}
                            </div>

                        </div>

                </div>
            </div>
        </a>

    {% endfor %}
        </div>
{% if pageCount>1 %}

    <div class="moreorderbtn">
        加载更多
    </div>
{% endif %}
  

    <div class="footdiv">
        <a class="foota"  href="{{ path('auto_wap_index3') }}">
            <img src="{{ asset('/bundles/autowap/images/2.0-home.png') }}"/>
        </a>
        <a class="foota" href="http://a.app.qq.com/o/simple.jsp?pkgname=com.lecarx.lecarx&g_f=991653" >
            <img src="{{ asset('/bundles/autowap/images/2.0-down.png') }}"/>
        </a>
    </div>
{% endblock %}
{% block footer %}
{% endblock %}